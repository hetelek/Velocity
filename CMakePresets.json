{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-mingw-release",
      "displayName": "Windows MinGW Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/windows-mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "windows-mingw-debug",
      "displayName": "Windows MinGW Debug", 
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/windows-mingw-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release", 
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/macos-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug", 
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "generator": "Ninja", 
      "binaryDir": "${sourceDir}/out/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "generator": "Ninja", 
      "binaryDir": "${sourceDir}/out/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-mingw-release",
      "configurePreset": "windows-mingw-release"
    },
    {
      "name": "windows-mingw-debug",
      "configurePreset": "windows-mingw-debug"
    },
    {
      "name": "macos-release", 
      "configurePreset": "macos-release"
    },
    {
      "name": "macos-debug", 
      "configurePreset": "macos-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    }
  ]
}